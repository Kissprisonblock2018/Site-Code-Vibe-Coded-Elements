<script>
//<![CDATA[
const outside = document.querySelector('.card-outside');
        let hasTriggeredConfetti = false;

        outside.addEventListener('transitionend', function(e) {
            if (e.propertyName === 'transform' && !hasTriggeredConfetti) {
                const transform = window.getComputedStyle(outside).transform;
                
                if (transform !== 'none' && transform.includes('matrix')) {
                    confetti({
                        particleCount: 100,
                        spread: 70,
                        origin: { y: 0.6 },
                        colors: ['#f3b004', '#d92355', '#39b220', '#74cac1']
                    });
                    
                    setTimeout(() => {
                        confetti({
                            particleCount: 50,
                            angle: 60,
                            spread: 55,
                            origin: { x: 0 },
                            colors: ['#f3b004', '#d92355', '#39b220', '#74cac1']
                        });
                    }, 200);
                    
                    setTimeout(() => {
                        confetti({
                            particleCount: 50,
                            angle: 120,
                            spread: 55,
                            origin: { x: 1 },
                            colors: ['#f3b004', '#d92355', '#39b220', '#74cac1']
                        });
                    }, 400);
                    
                    hasTriggeredConfetti = true;
                }
            }
        });

        outside.addEventListener('transitionstart', function() {
            setTimeout(() => {
                hasTriggeredConfetti = false;
            }, 500);
        });
//]]>
</script>
